pipeline{
  agent any
  
  tools{
    maven 'maven-3.9.1'
  }
  
  environment{
    AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
    AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
  }
  
  stages{
    stage('Code Checkout')
    {
      steps{
      checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Nehanilajkar/Webserver-Deployment-using-Jenkins
.git']])
      }
    }
    stage('Infrastructure Provisioing')
    {
      steps
      {
        dir('/var/lib/jenkins/workspace/Webserver/1_Deploy_Infrastructure_on_AWS/terraform_files')
        {
          sh 'ssh-keygen -t rsa -f /var/lib/jenkins/.ssh/id_rsa -q -P "" | echo n'
          sh 'touch /var/lib/jenkins/.ssh/known_hosts'
          sh 'terraform init'
          sh 'terraform plan --var-file=var.tfvars'
          sh 'terraform apply --var-file=var.tfvars --auto-approve'
        }
      }
    }
    
  }
}
